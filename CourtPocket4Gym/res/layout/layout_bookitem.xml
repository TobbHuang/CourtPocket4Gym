<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="50dp"
    android:background="@drawable/shape_book_llselection"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_bookitem_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/shape_book_tvselection"
        android:gravity="center"
        android:text="14:00-15:00"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_bookitem_courtname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="足球场1"
        android:textColor="@color/yellow" />
    
    <TextView 
        android:id="@+id/tv_bookitem_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>